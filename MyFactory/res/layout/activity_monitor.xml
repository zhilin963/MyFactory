<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myfactory.MonitorActivity"
    android:background="@drawable/background_monitor" >

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*">
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50sp">
        <TextView
            android:id="@+id/textView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_span="6"></TextView>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30sp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/TextView02"
            android:text="Robtic Arm"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"
            android:textColor="#77FFEE"/>
        <TextView
            android:id="@+id/TextView03"
            android:text="State"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"
            android:textColor="#77FFEE"/>
        <TextView
            android:id="@+id/TextView04"
            android:text="Details"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"
            android:textColor="#77FFEE"/>
        <TextView
            android:id="@+id/TextView05"
            android:text="Navigation"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"
            android:textColor="#77FFEE"/>
	</TableRow>
	<TableRow
        android:layout_height="wrap_content"
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal">
        <TextView
            android:text="RA1096"
            android:id="@+id/textView06"            
            android:gravity="center"
            android:textColor="#77FFEE"/>
        <ImageView
            android:id="@+id/imageView1"
            android:src="@drawable/greenbutton"
            android:layout_width="20sp"
        	android:layout_height="20sp"/>
         <Button
                android:id="@+id/detail1"              
                android:background="@drawable/buttonshape"                
                android:text="@string/details"
                android:textColor="#FCFCFC"
                android:layout_width="20sp"
        		android:layout_height="23sp"
                android:gravity="center"          
                android:onClick="gotoDetail1" />
          <Button
                android:id="@+id/navigation1"              
                android:background="@drawable/buttonshape"                
                android:text="@string/navigation"
                android:textColor="#FCFCFC"
                android:layout_width="20sp"
        		android:layout_height="23sp"
                android:gravity="center"          
                android:onClick="gotoNavigation" />       
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal">
        <TextView
            android:text="RA1089"
            android:id="@+id/textView07"
            android:gravity="center"
            android:textColor="#77FFEE"/>
 		<ImageView
            android:id="@+id/imageView2"
            android:src="@drawable/greybutton"
            android:layout_width="20sp"
        	android:layout_height="20sp"/>
         <Button
                android:id="@+id/detail2"              
                android:background="@drawable/buttonshape"                
                android:text="@string/details"
                android:textColor="#FCFCFC"
                android:layout_width="15sp"
        		android:layout_height="23sp"
                android:gravity="center"
                android:onClick="gotoDetail2" />
         <Button
                android:id="@+id/navigation2"              
                android:background="@drawable/buttonshape"                
                android:text="@string/navigation"
                android:textColor="#FCFCFC"
                android:layout_width="20sp"
        		android:layout_height="23sp"
                android:gravity="center"          
                android:onClick="gotoNavigation" />     
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal">
        <TextView
            android:text="RA1077"
            android:id="@+id/textView08"
            android:gravity="center"
            android:textColor="#77FFEE"/>
         <ImageView
            android:id="@+id/imageView3"
            android:src="@drawable/redbutton"
            android:layout_width="20sp"
        	android:layout_height="20sp"
        	android:gravity="left"/>
         <Button
                android:id="@+id/detail3"              
                android:background="@drawable/buttonshape"                
                android:text="@string/details"
                android:textColor="#FCFCFC"
                android:layout_width="15sp"
        		android:layout_height="23sp"
                android:gravity="center"
                android:onClick="gotoDetail3" />
          <Button
                android:id="@+id/navigation3"              
                android:background="@drawable/buttonshape"                
                android:text="@string/navigation"
                android:textColor="#FCFCFC"
                android:layout_width="20sp"
        		android:layout_height="23sp"
                android:gravity="center"          
                android:onClick="gotoNavigation" />      
    </TableRow>
    </TableLayout>

</RelativeLayout>
